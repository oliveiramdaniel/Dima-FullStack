@page "/transactions/new"
@inherits CreateTransactionPage

<MudText Typo="Typo.h3">New Transaction</MudText>

<MudPaper Class="pa-8 mt-4">
    <EditForm Model="@InputModel" OnValidSubmit="OnValidSubmitAsync">
        <DataAnnotationsValidator />

        <MudTextField Label="Title"
                      HelperText="Required field"
                      @bind-Value="InputModel.Title"
                      For="@(() => InputModel.Title)" />

        <MudTextField Label="How much?"
                      T="decimal"
                      Format="C"
                      Variant="Variant.Text"
                      HelperText="Enter the amount to be paid or received"
                      @bind-Value="InputModel.Amount"
                      For="@(() => InputModel.Amount)" />

        <MudDatePicker Label="When?"
                       Editable="true"
                       @bind-Date="@InputModel.PaidOrReceiveAt"
                       HelperText="Select the date the amount will be paid or received" />

        <MudSelect T="ETransactionType"
                   Label="Type of Movement"
                   AnchorOrigin="Origin.BottomCenter"
                   @bind-Value="InputModel.Type">
            <MudSelectItem T="ETransactionType" Value="ETransactionType.Deposit">
                Deposit
            </MudSelectItem>
            <MudSelectItem T="ETransactionType" Value="ETransactionType.Withdraw">
                Withdraw
            </MudSelectItem>
        </MudSelect>
        
        <MudSelect T="long"
                   Label="Category"
                   @bind-Value="InputModel.CategoryId"
                   AnchorOrigin="Origin.BottomCenter">
            @foreach (var category in Categories)
            {
                <MudSelectItem T="long" Value="@category.Id">
                    @category.Title
                </MudSelectItem>
            }
        </MudSelect>
        
        <MudButton ButtonType="ButtonType.Submit"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   Class="mt-4">
            Save
        </MudButton> 
    </EditForm>
</MudPaper>